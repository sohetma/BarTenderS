<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/bartender_logo"
        android:cropToPadding="false"
        android:baselineAlignBottom="false"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_carte"
            android:id="@+id/carte_bouton"
            android:textSize="@dimen/dispatch_text_size"
            android:padding="15dp"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_commande"
            android:id="@+id/commande_bouton"
            android:textSize="@dimen/dispatch_text_size"
            android:padding="15dp"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_addition"
            android:id="@+id/addition_bouton"
            android:textSize="@dimen/dispatch_text_size"
            android:padding="15dp"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_inventaire"
            android:id="@+id/inventaire_bouton"
            android:textSize="@dimen/dispatch_text_size"
            android:padding="15dp"
            android:layout_margin="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_deconnexion"
            android:id="@+id/deconnexion_bouton"
            android:layout_gravity="center_horizontal"
            android:enabled="false" />
    </LinearLayout>

</LinearLayout>


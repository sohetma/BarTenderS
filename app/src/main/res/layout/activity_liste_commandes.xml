<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lsin1225.uclouvain.be.bartenders.activities.ListeCommandesActivity"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/table"
        android:stretchColumns="1"
        android:shrinkColumns="1"
        android:layout_above="@+id/nouvelle_commande_bouton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"></TableLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_nouvelle_commande"
        android:id="@+id/nouvelle_commande_bouton"
        android:layout_alignParentBottom="true"
        android:onClick="onNouvelleCommandeClick" />

</RelativeLayout>
